# OptiSchema Production Environment Configuration
# Copy this file to .env.prod and fill in your actual values

# Database Configuration (REQUIRED)
DATABASE_URL=postgresql://optischema:your_secure_password@postgres:5432/optischema
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=optischema
POSTGRES_USER=optischema

# AI/LLM Configuration (Optional - leave blank if not using AI features)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o
GEMINI_API_KEY=
DEEPSEEK_API_KEY=
LLM_PROVIDER=gemini  # gemini | openai | deepseek

# WebSocket Configuration
UI_WS_URL=ws://your-domain.com:8000/ws

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_RELOAD=false

# Frontend Configuration
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=3000

# Environment Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING

# Cache Configuration
CACHE_TTL=3600
CACHE_SIZE=1000

# Analysis Configuration
POLLING_INTERVAL=30
TOP_QUERIES_LIMIT=10
ANALYSIS_INTERVAL=60

# Sandbox Configuration (Optional)
SANDBOX_DATABASE_URL=postgresql://sandbox:your_sandbox_password@postgres_sandbox:5432/sandbox
SANDBOX_POSTGRES_PASSWORD=your_sandbox_password
SANDBOX_POSTGRES_DB=sandbox
SANDBOX_POSTGRES_USER=sandbox
REPLICA_DATABASE_URL=postgresql://sandbox:your_sandbox_password@postgres_sandbox:5432/sandbox
REPLICA_ENABLED=false

# Security Notes:
# - Use strong, unique passwords for all database connections
# - Consider using environment-specific secrets management
# - Ensure all API keys are properly secured
# - Use HTTPS in production with proper SSL certificates
