# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/demo

POSTGRES_PASSWORD=optischema_pass
POSTGRES_DB=optischema
POSTGRES_USER=optischema

# AI Configuration (Optional)
# Providers: gemini, openai, deepseek, ollama
LLM_PROVIDER=gemini
OPENAI_API_KEY=
GEMINI_API_KEY=
DEEPSEEK_API_KEY=
# For Ollama:
# OLLAMA_BASE_URL=http://host.docker.internal:11434

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8080
BACKEND_RELOAD=true

# Frontend Configuration
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=3000

# Cache & Analysis
CACHE_TTL=3600
ANALYSIS_INTERVAL=60

# Sandbox (Optional)
SANDBOX_DATABASE_URL=postgresql://sandbox:sandbox_pass@postgres_sandbox:5432/sandbox
REPLICA_ENABLED=true
